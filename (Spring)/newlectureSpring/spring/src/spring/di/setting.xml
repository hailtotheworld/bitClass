<!-- ArrayList컬렉션을 개별적으로 따로 만드는 방법. -->
<!-- xmlns:util="http://www.springframework.org/schema/util" -->
<!-- <util:list>처리기는 실제로 객체를 만들수 있도록하는 능력을 갖고있다. -->
<util:list id="madeExams" list-class="java.util.ArrayList">
 <!-- 어떤 컬렉션을 만들지 list-class에 적어줘야 한다. -->
 <!-- 실제로 만들어진 객체니까 id(이름)을 정해줘야 한다. -->
	<bean class="spring.di.entity.NewlecExam" p:kor="66" p:eng="77" p:math="88" p:com="99"/> <!-- 객체를 만들어서 넣는거다. 이름을 굳이 넣어줄필요가 없다. -->
	<ref bean="exam"/> <!-- 만들어진 객체를 참조하며 넣는거다  -->
</util:list>

<!-- 컬렉션을 ArrayList의 생성자에 넘기는 방식으로 만든다.-->
<!-- new ArrayList(Collection c) -> ArrayList생성자에 콜렉션을 넣어서 초기화할수있다. -->
<!-- list.add() add메서드는 set메서드가 아니라서 <property>는 이용할수 없겠다. -->
<bean id="exams" class="java.util.ArrayList">
	<constructor-arg>
		<list> <!-- 자체로 객체를 만드는 역할은 하지 못한다. -->
			<bean class="spring.di.entity.NewlecExam" p:kor="11" p:eng="22" p:math="33" p:com="44"/> <!-- 실제로 만들어지는게 아니고 대입만 되는 용도라서 이름을 굳이 넣어줄필요가 없다. -->
			<ref bean="exam"/> <!-- 이미 만들어진 객체를 참조하며 넣는거다  -->
		</list>
	</constructor-arg>
</bean>
 
 
 
</beans>



